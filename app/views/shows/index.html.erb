<h1>Listing shows</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>When</th>
    <th>Where</th>
    <th>Cost</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @shows.each do |show| %>
  <tr>
    <td><%= show.title %></td>
    <td><%= show.description %></td>
    <td><%= show.when %></td>
    <td><%= show.where %></td>
    <td><%= show.cost %></td>
    <td><%= link_to 'Show', show %></td>
    <td><%= link_to 'Edit', edit_show_path(show) %></td>
    <td><%= link_to 'Destroy', show, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

